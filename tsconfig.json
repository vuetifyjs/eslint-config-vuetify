{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "*": ["types.d.ts", "index.js.mjs", "index.ts.mjs"]
    }
  },
  "include": ["**/*.ts", "**/*.d.ts"]
}